<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ingreso de Productos</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/estilos.css" />
  </head>

  <body>
    <div class="container mt-3">
      <div class="jumbotron">
        <h2>Ingrese Producto</h2>
        <br />
        <form action="/api/productos" method="POST">
          Nombre:
          <input type="text" name="title" class="form-control" placeholder=" Nombre" /> Precio:
          <input type="number" name="precio" class="form-control" placeholder=" Precio" /> Foto URL:
          <input type="url" name="url" class="form-control" placeholder=" Url" />
          <button type="submit" class="btn btn-success mt-3">Enviar</button>
        </form>
      </div>
    </div>

    <script src="../api/productos.js" defer></script>
  </body>
</html>
