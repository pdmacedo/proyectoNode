<style>
    .table td,
    .table th {
        vertical-align: middle; 
    }
</style>

{{#if listExist}}
<h2>Lista de Productos</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>

        {{#each productos}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.precio}}</td>
            <td>{{this.url}}</td>
        </tr>
        {{/each}}
        
    </table>
</div>
{{/if}}