extends index 

block formularioProd 

    h2 Ingrese Producto
    br
    form(action="/productos" method="POST")
        Nombre:  input(type="text" name="title" placeholder="Nombre") 
        br
        Precio:  input(style="margin-top: 20px;" type="text" name="precio" placeholder="Precio")
        br
        Foto-URL:  input(style="margin-top: 20px;" type="text" name="url" placeholder="URL")
        br
        br
        button(class="btn btn-success mt-3 mb-5" type="submit") Enviar
        a(href="/productos" style="margin-left: 5px;" class="btn btn-success mt-3 mb-5") Ver productos
    
